{
    "tasks": [
        {
            //task type
            "type": "cppbuild",
            //task label
            "label": "C/C++: g++.exe build active file",
            //specify where the compiler is located
            "command": "C:/Users/doria/Desktop/C++/TDM-GCC-64/bin/g++.exe",
            //compiler comandline arguments:
            "args": [
                //spot errors more easily in console
                "-fdiagnostics-color=always",
                //debugging version
                "-g",
                //set C++ standards
                "-std=c++17",
                //include python headers
                "-I", "C:/Python/Python310/include/",
                //include blender source code header
                "-I", "C:/Blender/3.4/source/source/source/blender/makesdna/", 
                "-I", "C:/Blender/3.4/source/source/source/blender/makesrna/",
                "-I", "C:/Blender/3.4/source/source/source/blender/blenkernel/", 
                "-I", "C:/Blender/3.4/source/source/source/blender/blenlib/", 
                "-I", "C:/Blender/3.4/source/source/intern/guardedalloc/", //desesperate
                //main file to build
                "main.cpp", 
                //specify output, directly nuild in addon/pyext
                "-o", "${fileDirname}/../pyext/readmem.pyd", 
                //specify libraries for linker
                "-L", "C:/Python/Python310/libs/",
                //specify linker libraries to include
                "-lpython310", "-shared"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
